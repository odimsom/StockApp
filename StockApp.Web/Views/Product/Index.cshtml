@model List<StockApp.Aplication.ViewModel.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <main role="main" class="pb-3">
        <div class="content-container">
            <div class="product-album">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="page-title">
                        <i class="fas fa-boxes me-2"></i>Mantenimiento de Productos
                    </h2>
                    <div class="input-group mb-3 mb-md-0 me-md-3 search-container">
                        <input type="text" class="form-control" placeholder="Buscar productos..." aria-label="Buscar productos">
                        <button class="btn btn-outline-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <a class="btn btn-success" asp-controller="Product" asp-action="Create">
                        <i class="fas fa-plus-circle me-1"></i>Nuevo Producto
                    </a>
                </div>

                <div class="row">
                    @if (Model != null && Model.Count != 0)
                    {
                        foreach (var i in Model)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="product-card card h-100">
                                    <div class="product-img-container">
                                        <img src="@i.UrlImage" class="card-img-top product-img" alt="@i.Name">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@i.Name</h5>
                                        <p class="card-text">@i.Description</p>
                                        <div class="product-price">
                                            <span class="price-tag">@i.Price.ToString("C")</span>                                  
                                        </div>
                                    </div>
                                    <div class="card-footer d-flex justify-content-between">
                                        <a asp-controller="Product" asp-action="Update" asp-route-id="@i.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit me-1"></i>Editar
                                        </a>
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@i.Id" class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-info-circle me-1"></i>Detalles
                                        </a>
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt me-1"></i>Eliminar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h3 class="text-center">No hay productos registrados.</h3>
                    }
                </div>

                <!-- Paginación -->
                <nav aria-label="Navegación de páginas" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>
</div>
